<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body id="blog">
    <%- include("header.ejs") %>

    <h1>G-Blog</h1>
    <hr>
    <% if (posts.length === 0) { %>
        <p>No posts yet! <a href="/post">Create a new post</a></p>
    <% } else { %>
        <% posts.forEach(function(post, index) { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>

            </div>
            <hr>
        <% }) %>
    <% } %>
</body>
</html>